<policies>
  <inbound>
    <base />
    <!-- 60 rpm -->
    <rate-limit calls="60" renewal-period="60" />
    <!-- CORS for local dev + app domain -->
    <cors allow-credentials="false">
      <allowed-origins>
        <origin>http://localhost:3000</origin>
        <origin>https://app.urbanhealth.club</origin>
      </allowed-origins>
      <allowed-methods>
        <method>GET</method>
        <method>POST</method>
        <method>OPTIONS</method>
      </allowed-methods>
      <allowed-headers>
        <header>*</header>
      </allowed-headers>
      <expose-headers>
        <header>*</header>
      </expose-headers>
    </cors>
  </inbound>
  <backend><base /></backend>
  <outbound><base /></outbound>
  <on-error><base /></on-error>
</policies>
